        <div class="row" id="form">
            <div class="col-sm-12 " >
                <form class="needs-validation" novalidate>
                    <h1 class="display-5">B.Y.O.B</h1>
                    <div class="form-group">
                        <label for="colFormLabel" class="col-sm-12 col-form-label">Name</label>
                        <div class="col-sm-12">
                          <input type="text" class="form-control" id="guest_name" placeholder="Name" required>
                        <div class="invalid-feedback">Please provide a name</div>
                        </div>
                    </div>
                    <div class="form-check form-check-inline pl-3">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="Own board">
                        <label class="form-check-label" for="inlineRadio1">A) Have my own board</label>
                    </div>
                    <div class="form-check form-check-inline pl-3">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="Rent board">
                        <label class="form-check-label" for="inlineRadio2">B) Would like to rent a board</label>
                    </div>
                    <div class="form-check form-check-inline pl-3">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="Buy board" >
                        <label class="form-check-label" for="inlineRadio3">C) Would like to buy a board</label>
                    </div>
                    <div class="form-group">
                        <label for="colFormLabel" class="col-sm-12 col-form-label">Name</label>
                        <div class="col-sm-12">
                          <input type="email" class="form-control" id="guest_email" placeholder="E-mail" required>
                        </div>
                    </div>
                    <div class="form-check form-check-inline pl-3">
                        <input class="form-check-input" type="checkbox" name="inlineRadioOptions" id="inlineRadio5" value="NO BLUE CHEESE">
                        <label class="form-check-label" for="inlineRadio5">Skip the Blue Cheese</label>
                    </div>
                    <div class="form-check form-check-inline pl-3">
                        <input class="form-check-input" type="checkbox" name="inlineRadioOptions" id="inlineRadio7" value="NO NUTS">
                        <label class="form-check-label" for="inlineRadio7">Pass on the nuts</label>
                    </div>
                    <div class="form-group">
                        <label for="colFormLabel" class="col-sm-12 col-form-label">Phone Number</label>
                        <div class="col-sm-12">
                          <input type="text" class="form-control" id="guest_phone" placeholder="905 123 4567" required>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button> 
                      
                </form>
            </div>
            
